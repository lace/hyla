{
  "name": "hyla",
  "description": "2D and 3D computational geometry library",
  "keywords": [
    "computational-geometry",
    "geometry",
    "2d-geometry",
    "3d-geometry",
    "polyline"
  ],
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": "dist/cli.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "del dist/",
    "build": "tsc",
    "predev": "del dist/",
    "dev": "tsc --watch",
    "check-types": "tsc --noEmit --project .",
    "mocha": "ts-mocha --project tsconfig.json \"src/**/*.spec.ts\"",
    "lint": "eslint \"**/*.ts\"",
    "prettier:check": "prettier --check \"**/*.@(ts|js|yml|md|json)\"",
    "prettier": "prettier --write \"**/*.@(ts|js|yml|md|json)\"",
    "test": "run-p --continue-on-error check-types mocha lint prettier:check",
    "prepare": "npm run build"
  },
  "files": [
    "dist/**/*.@(js|ts|map)"
  ],
  "repository": "lace/hyla",
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^8.0.1",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "chai": "^4.2.0",
    "del-cli": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^5.0.0",
    "mocha": "^7.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "ts-mocha": "^8.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "engines": {
    "node": ">= 12.x"
  }
}
